template(name='header')
  nav.light-blue.z-depth-1(role='navigation')
    .nav-wrapper.container
      a.brand-logo(href="/")
        img.brand(src='/s-brush-letter-logo.png')
      a.button-collapse(href="#", data-activates="mobile-demo")
        i.material-icons menu

      ul.right.hide-on-med-and-down
        li(class="{{isActiveRoute 'work'}}")
          a(href="{{pathFor 'work'}}") Work
        li(class="{{isActiveRoute 'who'}}")
          a(href="{{pathFor 'who'}}") Who
        li(class="{{isActiveRoute 'how'}}")
          a(href="{{pathFor 'how'}}") How

      ul.side-nav#mobile-demo
        li(class="{{isActiveRoute 'work'}}")
          a(href="{{pathFor 'work'}}") Work
        li(class="{{isActiveRoute 'who'}}")
          a(href="{{pathFor 'who'}}") Who
        li(class="{{isActiveRoute 'how'}}")
          a(href="{{pathFor 'how'}}") How
